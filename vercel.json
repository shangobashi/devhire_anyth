{
  "version": 2,
  "builds": [
    {
      "src": "api/ssr.cjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "build/server/main/**"
      }
    },
    { "src": "build/client/assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/build/client/assets/$1" },
    { "src": "/(.*)", "dest": "/api/ssr.cjs" }
  ]
}
