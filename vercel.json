{
  "version": 2,
  "builds": [
    { "src": "api/ssr.js", "use": "@vercel/node" },
    { "src": "build/client/assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/assets/(.*)", "dest": "/build/client/assets/$1" },
    { "src": "/(.*)", "dest": "/api/ssr.js" }
  ]
}
